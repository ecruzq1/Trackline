        <table class="table table-bordered mt-5" id="example">
            <thead>
                <tr>
                    <th>
                        <center>Teléfono</center>
                    </th>
                    <th>
                        <center>Acción</center>
                    </th>
            </thead>
            <tbody>
                {{#each telefonos}}
                <tr>
                    <td>{{TEL_NUM}}</td>
                    <td>
                        <center>
                            <button type="button" class="btn btn-blue-grey btn-sm rnd" data-toggle="modal"
                                data-target="#modal_edit_telefono{{TEL_ID}}">Editar</button>
                            <button type="button" class="btn btn-danger btn-sm rnd" data-toggle="modal"
                                data-target="#modal_delete_telefono{{TEL_ID}}">Eliminar</button>
                        </center>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="modal_edit_telefono{{TEL_ID}}" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <!-- Add .modal-dialog-centered to .modal-dialog to vertically center the modal -->
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <form action="/edit_telefono" method="POST">
                            <div class="modal-content">
                                <div class="modal-header elegant-color  justify-content-center">
                                    <h5 class="modal-title text-white">Editar Teléfono</h5>
                                    <button type="button" class="close text-white" data-dismiss="modal"
                                        aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="md-form">
                                        <input type="tel" id="TEL_NUM" name="TEL_NUM" class="form-control"
                                            value="{{TEL_NUM}}" required <label for="TEL_NUM">Teléfono</label>
                                    </div>
                                    <input type="hidden" class="form-control" name="TEL_ID" value="{{TEL_ID}}">
                                </div>
                                <div class="modal-footer justify-content-center">
                                    <button type="button submit" class="btn btn-light-green btn-sm rnd">Editar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Central Modal Small -->
                <div class="modal fade" id="modal_delete_telefono{{TEL_ID}}" tabindex="-1" role="dialog"
                    aria-labelledby="myModalLabel" aria-hidden="true">
                    <!-- Change class.modal-sm to change the size of the modal -->
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <form method="POST" action="/delete_telefono">
                            <div class="modal-content">
                                <div class="modal-header danger-color">
                                    <h4 class="modal-title text-white ">Eliminar</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Esta seguro de eliminar este elemento?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light btn-sm"
                                        data-dismiss="modal">Cancelar</button>
                                    <input type="hidden" class="form-control" name="TEL_ID" value="{{TEL_ID}}">
                                    <button type="button submit" class="btn btn-danger btn-sm">Borrar</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
                <!-- Central Modal Small -->
                {{/each}}
            </tbody>
        </table>
