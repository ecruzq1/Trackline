                        <input type="file" class="custom-file-input form-control" id="empresa_promo"
                            name="empresa_promo" accept="image/x-png, image/gif, image/jpeg, image/jpg" required>
                        <label class="custom-file-label" for="empresa_promo" data-browse="Seleccionar">Seleccione
                            un archivo de imagen</label>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-sm rnd" data-dismiss="modal">Cerrar</button>
                    <button type="button submit" class="btn btn-light-green btn-sm rnd">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>
