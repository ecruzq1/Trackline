<div class="container">
    <div class="sidebar rounded-lg">
        <div class="header  elegant-color p-1">
            <h5 class="h5 text-white text-center">Panel Administracion</h5>
        </div>
        <div class="list-group list-group-flush pl-2 pr-2 pt-5 pb-5">
            <a href="/adminPanel" class="list-group-item list-group-item-action waves-effect ">
                <i class="fas fa-home mr-3"></i>Inicio
            </a>
            {{#ifEquals usuario.ADM_TIPO "PRINCIPAL"}}
            <a href="/administradores" class="list-group-item list-group-item-action waves-effect ">
                <i class="fas fa-users-cog mr-3"></i>Administradores</a>
            <a href="/componentes" class="list-group-item list-group-item-action waves-effect active">
                <i class="fas fa-plus-circle mr-3"></i>Administar Componentes
            </a>
            {{/ifEquals}}
            <a href="/adminblog" class="list-group-item list-group-item-action waves-effect">
                <i class="fas fa-blog mr-3"></i>Blog
            </a>
            <a href="/adminAnuncios" class="list-group-item list-group-item-action waves-effect">
                <i class="fas fa-briefcase mr-3"></i>Administrar Anuncios
            </a>
            <a href="/adminUsuarios" class="list-group-item list-group-item-action waves-effect ">
                <i class="fas fa-users mr-3"></i>Administrar Usuarios</a>
            <a href="/adminMensajes" class="list-group-item list-group-item-action waves-effect">
                <i class="fas fa-headset mr-3"></i>Mensajes Usuarios</a>
            <a href="/llavesEnMano" class="list-group-item list-group-item-action waves-effect ">
                <i class="far fa-handshake mr-3"></i>Asesoria y Consultas</a>
            <a href="/denuncias" class="list-group-item list-group-item-action waves-effect ">
                <i class="fas fa-exclamation-triangle mr-3"></i>Denuncias</a>
            <a href="/adminCuenta" class="list-group-item list-group-item-action waves-effect">
                <i class="fas fa-user mr-3"></i>Mi Cuenta</a>
            <a href="/logout" class="list-group-item list-group-item-action waves-effect">
                <i class="fas fa-sign-out-alt mr-3"></i>Cerrar Sesión</a>
        </div>
    </div>
    <div class="content-panel white rounded-lg pt-5 mb-5 border">
        <a type="button" class="btn btn-light-green btn-sm rnd mt-3" href="/componentes">Regresar</a>
        <div class="header pt-5">
            <h2 class="font-weight-normal font-italic text-center">Datos de la Empresa</h2>
        </div>
        <h6 class="font-weight-bolder text-white elegant-color rounded p-2">Misión Empresarial</h6>
        <div class="row border rounded-lg m-2 p-2">
            <span class="large-description">{{empresa.EMP_MISION}}</span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-light-green btn-sm rnd" data-toggle="modal"
                data-target="#modal_mision">Editar</button>
        </div>
        <h6 class="font-weight-bolder text-white elegant-color rounded p-2">Visión Empresarial</h6>
        <div class="row border rounded-lg m-2 p-2">
            <span class="large-description">{{empresa.EMP_VISION}}</span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-light-green btn-sm rnd" data-toggle="modal"
                data-target="#modal_vision">Editar</button>
        </div>
        <h6 class="font-weight-bolder text-white elegant-color rounded p-2">Descripción Empresarial</h6>
        <div class="row border rounded-lg m-2 p-2">
            <span class="large-description">{{empresa.EMP_INFO}}</span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-light-green btn-sm rnd" data-toggle="modal"
                data-target="#modal_descripcion">Editar</button>
        </div>
        <h6 class="font-weight-bolder text-white elegant-color rounded p-2">Logo de la Empresa</h6>
        <div class="text-center" style="background-color: #123b61dc;">
            <img src="/logo_empresa/{{empresa.EMP_LOGO}}" class="img-fluid">
        </div>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-light-green btn-sm rnd" data-toggle="modal"
                data-target="#modal_logo">Editar</button>
        </div>
        <h6 class="font-weight-bolder text-white elegant-color rounded p-2">Promo</h6>
        <div class="text-center">
            <img src="/promos/{{empresa.EMP_PROMO}}" class="img-fluid">
        </div>
        <div class="d-flex justify-content-end">
            {{#if empresa.IS_PROMO}}
            <button type="button" class="btn btn-warning btn-sm rnd" data-toggle="modal"
                data-target="#modal_desactivate_promo">Desactivar</button>
            {{else}}
            <button type="button" class="btn btn-indigo btn-sm rnd" data-toggle="modal"
                data-target="#modal_activate_promo">Activar</button>
            {{/if}}
            <button type="button" class="btn btn-light-green btn-sm rnd" data-toggle="modal"
                data-target="#modal_promo">Editar</button>
        </div>
    </div>
</div>



<!-- Central Modal Small -->
<div class="modal fade" id="modal_logo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <!-- Change class .modal-sm to change the size of the modal -->
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-white" id="myModalLabel">Logo de la Empresa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST" action="/editLogo" enctype="multipart/form-data">

                <div class="modal-body">
                    <div class="custom-file">
                        <input type="hidden" class="form-control" name="EMP_LOGO" value="{{empresa.EMP_LOGO}}">
                        <input type="file" class="custom-file-input form-control" id="empresa_logo" name="empresa_logo"
                            accept="image/x-png, image/gif, image/jpeg, image/jpg" required>
                        <label class="custom-file-label" for="empresa_logo" data-browse="Seleccionar">Seleccione
                            un archivo de imagen</label>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-sm rnd" data-dismiss="modal">Cerrar</button>
                    <button type="button submit" class="btn btn-light-green btn-sm rnd">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Central Modal Small -->
<div class="modal fade" id="modal_promo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
